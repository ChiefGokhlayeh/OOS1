{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ReConfigure Release",
            "type": "shell",
            "command": "rm -rf _build && mkdir _build && cd _build && cmake ../${input:component}"
        },
        {
            "label": "ReConfigure Debug",
            "type": "shell",
            "command": "rm -rf _build && mkdir _build && cd _build && cmake -DCMAKE_BUILD_TYPE=Debug ../${input:component}"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build _build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "component",
            "type": "pickString",
            "options": ["ha1/aufgabe1", "ha1/aufgabe2", "ha1/aufgabe3", "ha1/aufgabe4", "ha1/aufgabe5", "lab1/aufgabe1", "lab1/aufgabe2", "lab1/aufgabe3", "lab1/aufgabe4",
            "lab1/aufgabe5", "ha2/aufgabe1", "ha2/aufgabe2", "lab2/aufgabe1"],
            "description": "Path to the cmake component to build relative to the project root."
        }
    ]
}